<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/partyName"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/partyNameET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Party Name" />

    <EditText
        android:id="@+id/streetAddressET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/partyNameET"
        android:layout_below="@+id/partyNameET"
        android:ems="10"
        android:hint="Street Address" />

    <EditText
        android:id="@+id/cityET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/streetAddressET"
        android:layout_below="@+id/streetAddressET"
        android:ems="10"
        android:hint="City" />

    <EditText
        android:id="@+id/stateET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cityET"
        android:layout_below="@+id/cityET"
        android:ems="10"
        android:hint="State" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/zipET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stateET"
        android:layout_below="@+id/stateET"
        android:ems="10"
        android:hint="Zip" />

    <EditText
        android:id="@+id/startTimeET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zipET"
        android:layout_below="@+id/zipET"
        android:ems="10"
        android:hint="Start Time"
        android:inputType="time" />

    <EditText
        android:id="@+id/endTimeET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startTimeET"
        android:layout_below="@+id/startTimeET"
        android:ems="10"
        android:inputType="time"
        android:hint="End Time" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/btnCreateParty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit" />
        
    </RelativeLayout>

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/endTimeET"
        android:layout_alignRight="@+id/endTimeET"
        android:layout_below="@+id/endTimeET"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine" />

</RelativeLayout>